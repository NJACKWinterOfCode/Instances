<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead details">Instances</p>
            <div class="list-group">
                <li class="list-group-item" active><strong>Author</strong> - <em><%= blog.author.username %></em></li>
                <p class="list-group-item"><em>Paragraph about the Author will go here after that feature is added.</em>
                </p>
                <a class="list-group-item">View his Profile</a>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <div class="caption-full">
                    <h1 style="text-align: center"><a href=""><%= blog.name %></a></h1>
                </div>
                <img class="img-responsive" src="<%= blog.image %>" alt="<%= blog.name %>">
                <div class="caption-full">
                    <p><%= blog.description %></p>
                    <h5 class="pull-right">10 days ago.</h5>
                    <p>
                        <em>
                            Submitted by <strong><a href=""><%= blog.author.username %></a></strong>
                        </em>
                    </p>
                    <% if(currentUser && blog.author.id.equals(currentUser._id)){ %>
                    <a href="/blogs/<%= blog._id %>/edit" class="btn btn-xs btn-warning">Edit</a>
                    <form class="deleteForm" action="/blogs/<%=blog._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-xs btn-danger">Delete</button>
                    </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a href="/blogs/<%= blog._id %>/comments/new" class="btn btn-success">
                        Add new comment
                    </a>
                </div />
                <hr>

                <% blog.comments.forEach(function(comment){ %>

                <div class="col-md-8">
                    <div class="card"
                        style="margin : 10px;   box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12);">
                        <div class="card-body">
                            <p>
                                <%= comment.text %>
                            </p>
                            <hr>
                            <div class="chip">

                                <%= comment.author.username %>
                            </div>

                            <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>


                            <a href="/blogs/<%= blog._id %>/comments/<%= comment._id %>/edit">
                                <button class="btn btn-outline-success dev">Edit</button>
                            </a>

                            <form class="deleteForm"
                                action="/blogs/<%= blog._id %>/comments/<%= comment._id %>?_method=DELETE"
                                method="POST">
                                <button class="btn btn-outline-danger dev">Delete</button>
                            </form>


                            <% } %>-
                        </div>
                    </div>

                </div> <% }) %>
            </div>
        </div>
    </div>

</div>



<% include ../partials/footer %>