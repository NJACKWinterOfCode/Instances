<div class="collapse" id="collapseExample1<%= comment._id %>">
    <div class="card bg-light" style="margin: 12px;box-shadow: none;">


        <div class="card-body">
            <form action="/blogs/<%= blog._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Edit Comment"
                        value="<%= comment.text %>" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Update!</button>
                </div>
            </form>
        </div>
    </div>
</div>