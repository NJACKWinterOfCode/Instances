<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-6" style="margin: 10px auto">
            <div class="card bg-light" style="padding: 10px;">

                <h1 style="text-align: center">Edit Comment </h1>
                <div class="card-body" style=" margin: 25px auto;">
                    <form action="/blogs/<%= blog_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" name="comment[text]" placeholder="Edit Comment"
                                value="<%= comment.text %>" required>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-block">Update!</button>
                        </div>
                        <a href="/blogs">Go Back</a>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>